<div class="posts">
    {{#each posts}}
    <article class="card">
        <div class="flex-row justify-space-between card-header">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
            <div>
                Made by {{User.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>