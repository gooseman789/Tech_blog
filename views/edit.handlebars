<div class="post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="editPost" class="card-body">
        <input type="hidden" name="postId" value="{{post.id}}">
        <label for="postTitle" class="post-title">Title</label>
        <input type="text" id="postTitle" value="{{post.title}}" class="form-input">
        <label for="postBody" class="post-body">Content</label>
        <textarea name="postBody" class="form-input">{{post.body}}</textarea>

        <button type="submit" class="btn">Update post?</button>
        <button type="button" id="deletePost">Delete post?</button>
    </form>
</div>
<script src="/js/edit.js"></script>