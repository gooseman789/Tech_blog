<div class="post">
    <section class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>{{post.title}}</h2>
            <div> Posted by {{post.User.username}} on {{format_date post.createdAt}}</div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </section>
    {{#if post.Comments}}
        <section class="card">
            <div class="card-header">
                <h3>

                </h3>
            </div>
        </section>
        <div class="card-body">
            {{#each post.Comments}}
                <div>
                    <p>{{body}}</p>
                    <p> -- {{User.username}} at {{format_date createdAt}}</p>
                </div>
                {{/each}}
        </div>
        {{/if}}

    <form id="newComment" class="card">
        <div class="card-header">
            <h3>New Comment?</h3>
        </div>
        <div class="card-body">
            <input type="hidden" name="postId" value="{{post.id}}">
            <label for="commentBody" class="form-label">Comment</label>
            <textarea name="commentBody" id="comment-body" ></textarea>
            <button type="submit" class="btn">Submit</button>
        </div>
    </form>

<script src="/js/comment.js"></script>
</div>