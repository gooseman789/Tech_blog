<div>
    <section>
        <div>
            <h2>{{post.title}}</h2>
            <div> Posted by {{post.User.username}} on {{format_date post.createdAt}}</div>
        </div>
        <div>
            {{post.body}}
        </div>
    </section>
    {{#if post.Comments}}
        <section>
            <div>
                <h3>

                </h3>
            </div>
        </section>
        <div>
            {{#each post.Comments}}
                <div>
                    <p>{{body}}</p>
                    <p> -- {{User.username}} at {{format_date createdAt}}</p>
                </div>
                {{/each}}
        </div>
        {{/if}}

    <form id="newComment">
        <div>
            <h3>New Comment?</h3>
        </div>
        <div>
            <input type="hidden" name="postId" value="{{post.id}}">
            <label for="commentBody" class="">Comment</label>
            <textarea name="commentBody" id="" ></textarea>
            <button type="submit" class="btn">Submit</button>
        </div>
    </form>

<script src="/js/comment.js"></script>
</div>